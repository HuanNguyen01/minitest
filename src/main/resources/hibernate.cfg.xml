<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http:// sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- Cấu hình kết nối cơ sở dữ liệu JDBC -->
		<property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
		<property name="hibernate.connection.url">jdbc:sqlserver://DESKTOP-KFGVGP3\\SQLEXPRESS01:1433;databaseName=ML101;trustServerCertificate=true</property>

		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password">huan</property>

		<!-- SQL dialect -->
		<property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>

		<!-- Hiển thị các câu SQL đã thực thi -->
		<property name="hibernate.show_sql">true</property>

		<!-- Tạo và cập nhật schema cơ sở dữ liệu -->
		<property name="hibernate.hbm2ddl.auto">update</property>
		
	 	
	</session-factory>
</hibernate-configuration>
